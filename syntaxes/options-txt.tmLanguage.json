{
  "name": "Minecraft options.txt",
  "scopeName": "source.options-txt",
  "patterns": [
    {
      "include": "#keys"
    },
    {
      "include": "#values"
    }
  ],
  "repository": {
    "keys": {
      "name": "support.type.property-name",
      "begin": "^",
      "end": "[a-z0-9](?=:)"
    },
    "values": {
      "begin": ":",
      "end": "$",
      "patterns": [
        {
          "name": "support.property-value",
          "begin": "[^:]",
          "end": "$",
          "patterns": [
            {
              "name": "constant.language.boolean",
              "match": "(true|false)"
            },
            {
              "name": "constant.numeric",
              "match": "[0-9\\.]"
            }
          ]
        },
        {
          "name": "punctuation.separator.key-value",
          "match": ":"
        }
      ]
    }
  }
}